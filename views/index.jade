	#social-icons
		a(href='https://github.com/jnazare', id="social")
			i.fa.fa-github-square.fa-2x
		a(href='http://www.linkedin.com/in/juliananazare', id="social")
			i.fa.fa-linkedin-square.fa-2x
		a(href='https://twitter.com/juliananazare', id="social")
