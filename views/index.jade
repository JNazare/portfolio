block content
	if(currentproject) 
		#myproject #{currentproject}
	else
		#projectrow.row
			h3 Recent Projects &rarr;
		#projectrow.row
			each project in projects
				a(href=project.url)
					#project.col-md-3
						p#title  #{project.title}
						//- p#subtitle  Wireless link between a Raspberry Pi and a software-defined radio 
						p#date  #{project.date}
		#projectrow.last.row
			h3 &larr; Past Projects