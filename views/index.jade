	#resume
		h1#sidebarlinks
			a(href='/') portfolio&nbsp;
			| |
			a(href='/resume')  resume 
		br
		p(id="caption")  Picture: Teaching Arduino to the Google CSSI camp

block content
	if(currentproject) 
		#myproject #{currentproject}
	else
		#projectrow.row
			h3 Work...
		#projectrow.row
			each job in work
				a(href=job.url)
					#work.col-md-3
						p#title  #{job.title}
						//- p#subtitle  Wireless link between a Raspberry Pi and a software-defined radio 
						p#date  #{job.date}
		#projectrow.row
			h3 Projects and Fun...
		#projectrow.row
			each project in projects
				a(href=project.url)
					#project.col-md-3
						p#title  #{project.title}
						p#date  #{project.date}